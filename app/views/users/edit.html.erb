<h1>Editing user</h1>
<% form_for(@user) do |f| %>
<%= f.error_messages %>
<p>
    <%= f.label :first %>
    <br/>
    <%= f.text_field :first %>
</p>
<p>
    <%= f.label :last %>
    <br/>
    <%= f.text_field :last %>
</p>
<p>
    <%= f.label :username %>
    <br/>
    <%= f.text_field :username %>
</p>
<p>
    <%= f.label :password %>
    <br/>
    <%= f.text_field :password %>
</p>
<p>
    <%= f.label :group_id %>
    <br/>
    <%= select_tag("user[group_id]", options_from_collection_for_select(@groups, :id, :title, @user.group.id))  %>
</p>
<p>
    <%= f.submit 'Update' %>
</p>
<% end %>
<%= link_to 'Show', @user %> |<%= link_to 'Back', users_path %>